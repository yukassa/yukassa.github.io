---
import BaseLayout from '../../layouts/BaseLayout.astro';
import projects from '../../data/projects.json';
---

<BaseLayout title="Projects — yukassa" description="見てほしい順に並べたプロジェクトの詳細です。デザインシステムや自動化の導入実績を紹介します。">
  <article class="page">
    <header class="page__hero container">
      <p class="page__eyebrow">Projects</p>
      <h1>ユーザーとビジネスの両面をつなぐプロジェクト</h1>
      <p class="page__lead">
        プロダクトチームと伴走したという設定のダミー案件を、ストーリー・成果・技術スタックと共に紹介します。
        ここで登場する名称や数値はすべてフィクションです。
      </p>
    </header>

    <div class="projects">
      {projects.map((project, index) => (
        <section id={project.slug} class="project container" aria-labelledby={`${project.slug}-title`}>
          <div class="project__meta">
            <span class="project__index">{String(index + 1).padStart(2, '0')}</span>
            <p class="project__tagline">{project.tagline}</p>
          </div>
          <div class="project__body">
            <figure class="project__media">
              <img src={project.thumbnail} alt={`${project.title} のビジュアル`} loading="lazy" />
            </figure>
            <div class="project__content">
              <h2 id={`${project.slug}-title`}>{project.title}</h2>
              <p class="project__summary">{project.summary}</p>
              <div class="project__lists">
                <div>
                  <h3>役割</h3>
                  <ul>
                    {project.role.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </div>
                <div>
                  <h3>ハイライト</h3>
                  <ul>
                    {project.highlights.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </div>
                <div>
                  <h3>成果</h3>
                  <ul>
                    {project.results.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </div>
              </div>
              <div class="project__footer">
                <div class="project__stack" aria-label="Tech stack">
                  {project.stack.map((tech) => (
                    <span>{tech}</span>
                  ))}
                </div>
                <div class="project__links">
                  {project.links.writeUp && (
                    <a href={project.links.writeUp}>Case study</a>
                  )}
                  {project.links.live && (
                    <a href={project.links.live} target="_blank" rel="noreferrer">Visit site</a>
                  )}
                </div>
              </div>
            </div>
          </div>
        </section>
      ))}
    </div>
  </article>
</BaseLayout>

<style>
  .page {
    display: flex;
    flex-direction: column;
    gap: clamp(2.5rem, 5vw, 3.5rem);
  }

  .page__hero {
    padding: clamp(3.2rem, 9vw, 4.8rem) clamp(1.8rem, 6vw, 3.2rem) clamp(1.2rem, 4vw, 2rem);
    display: grid;
    gap: clamp(1.9rem, 4.5vw, 2.8rem);
    position: relative;
    border-radius: clamp(2.6rem, 7vw, 3.6rem);
    overflow: hidden;
    background: linear-gradient(150deg, rgba(18, 32, 76, 0.9), rgba(8, 14, 38, 0.95));
    box-shadow: 0 34px 68px rgba(3, 6, 26, 0.55);
  }

  .page__hero::before,
  .page__hero::after {
    content: '';
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .page__hero::before {
    background:
      radial-gradient(circle at 18% 24%, rgba(124, 92, 255, 0.26), transparent 60%),
      radial-gradient(circle at 78% 20%, rgba(56, 189, 248, 0.24), transparent 58%);
    opacity: 0.85;
  }

  .page__hero::after {
    background: conic-gradient(from 210deg at 80% 12%, rgba(56, 189, 248, 0.2), transparent 150deg);
    mix-blend-mode: screen;
    opacity: 0.55;
  }

  .page__hero > * {
    position: relative;
    z-index: 1;
  }

  .page__eyebrow {
    margin: 0;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--accent);
  }

  .page__lead {
    margin: 0;
    max-width: 720px;
    color: var(--muted);
  }

  .projects {
    display: grid;
    gap: clamp(2.7rem, 5vw, 3.8rem);
    padding-inline: clamp(1.8rem, 6vw, 3.2rem);
    position: relative;
  }

  .project {
    display: grid;
    gap: clamp(2.2rem, 4.2vw, 2.9rem);
    position: relative;
    border-radius: clamp(2rem, 6vw, 3rem);
    padding: clamp(1.6rem, 4vw, 2.2rem) clamp(1.4rem, 3vw, 2rem);
    background: linear-gradient(140deg, rgba(16, 28, 66, 0.6), rgba(6, 10, 30, 0.7));
    box-shadow: inset 0 0 0 1px rgba(124, 146, 220, 0.12);
  }

  .project__meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--muted);
    flex-wrap: wrap;
  }

  .project__index {
    font-family: 'Outfit', 'Inter', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--accent);
  }

  .project__tagline {
    margin: 0;
    overflow-wrap: anywhere;
    flex: 1 1 220px;
  }

  .project__body {
    display: grid;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 1fr);
    gap: clamp(2.4rem, 4.2vw, 3.2rem);
    background: linear-gradient(160deg, rgba(20, 34, 78, 0.82), rgba(10, 16, 42, 0.94));
    border-radius: var(--radius-lg);
    padding: clamp(2.2rem, 4.2vw, 3.2rem);
    box-shadow: 0 34px 70px rgba(3, 6, 26, 0.52);
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(124, 146, 220, 0.28);
  }

  .project__body::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 80% 18%, rgba(56, 189, 248, 0.24), transparent 58%);
    opacity: 0.75;
    pointer-events: none;
  }

  .project__body > * {
    position: relative;
    z-index: 1;
  }

  .project__media img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    box-shadow: 0 24px 48px rgba(3, 6, 26, 0.45);
  }

  .project__content {
    display: grid;
    gap: clamp(1.5rem, 3vw, 2rem);
  }

  .project__summary {
    margin: 0;
    color: rgba(205, 214, 245, 0.82);
  }

  .project__lists {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: clamp(1.6rem, 3vw, 2.1rem);
  }

  .project__lists h3 {
    margin: 0 0 0.65rem;
    font-size: 1rem;
  }

  .project__lists ul {
    margin: 0;
    padding-left: 1.45rem;
    display: grid;
    gap: 0.8rem;
    color: rgba(205, 214, 245, 0.78);
  }

  .project__footer {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: clamp(1.25rem, 3vw, 2rem);
    align-items: center;
  }

  .project__stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.65rem;
  }

  .project__stack span {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 999px;
    background:
      linear-gradient(145deg, rgba(14, 32, 68, 0.96), rgba(8, 18, 44, 0.88)),
      linear-gradient(120deg, rgba(124, 92, 255, 0.24), rgba(56, 189, 248, 0.2));
    color: #f5f5ff;
    font-weight: 600;
    font-size: 0.9rem;
    box-shadow:
      inset 0 0 0 1px rgba(124, 146, 220, 0.4),
      0 18px 38px rgba(7, 12, 34, 0.65);
    letter-spacing: 0.01em;
  }

  .project__links {
    display: flex;
    gap: 1rem;
  }

  .project__links a {
    color: #f5f3ff;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.25s ease, text-shadow 0.25s ease;
  }

  .project__links a[target='_blank']::after {
    content: '↗';
    margin-left: 0.35rem;
    font-size: 0.85em;
  }

  .project__links a:hover,
  .project__links a:focus {
    color: var(--accent-secondary);
    text-shadow: 0 0 16px rgba(56, 189, 248, 0.45);
  }

  @media (max-width: 960px) {
    .project__body {
      grid-template-columns: 1fr;
      padding: clamp(1.9rem, 6vw, 2.6rem);
    }
  }

  @media (max-width: 640px) {
    .page__hero {
      border-radius: clamp(2.1rem, 8vw, 2.8rem);
      padding: clamp(2.7rem, 9vw, 3.3rem) clamp(1.35rem, 6vw, 2.1rem) clamp(1.2rem, 6vw, 1.8rem);
    }

    .projects {
      padding-inline: clamp(1.35rem, 6vw, 2.1rem);
    }

    .project {
      padding: clamp(1.25rem, 6vw, 1.8rem) clamp(1.1rem, 6vw, 1.6rem);
      border-radius: clamp(1.6rem, 8vw, 2.4rem);
    }

    .project__body {
      padding: clamp(1.6rem, 8vw, 2.1rem);
    }

    .project__footer {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
