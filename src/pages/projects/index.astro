---
import BaseLayout from '../../layouts/BaseLayout.astro';
import projects from '../../data/projects.json';
---

<BaseLayout title="Projects — yukassa" description="見てほしい順に並べたプロジェクトの詳細です。デザインシステムや自動化の導入実績を紹介します。">
  <article class="page">
    <header class="page__hero container">
      <p class="page__eyebrow">Projects</p>
      <h1>ユーザーとビジネスの両面をつなぐプロジェクト</h1>
      <p class="page__lead">
        プロダクトチームと伴走したという設定のダミー案件を、ストーリー・成果・技術スタックと共に紹介します。
        ここで登場する名称や数値はすべてフィクションです。
      </p>
    </header>

    <div class="projects">
      {projects.map((project, index) => (
        <section id={project.slug} class="project container" aria-labelledby={`${project.slug}-title`}>
          <div class="project__meta">
            <span class="project__index">{String(index + 1).padStart(2, '0')}</span>
            <p class="project__tagline">{project.tagline}</p>
          </div>
          <div class="project__body">
            <figure class="project__media">
              <img src={project.thumbnail} alt={`${project.title} のビジュアル`} loading="lazy" />
            </figure>
            <div class="project__content">
              <h2 id={`${project.slug}-title`}>{project.title}</h2>
              <p class="project__summary">{project.summary}</p>
              <div class="project__lists">
                <div>
                  <h3>役割</h3>
                  <ul>
                    {project.role.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </div>
                <div>
                  <h3>ハイライト</h3>
                  <ul>
                    {project.highlights.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </div>
                <div>
                  <h3>成果</h3>
                  <ul>
                    {project.results.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </div>
              </div>
              <div class="project__footer">
                <div class="project__stack" aria-label="Tech stack">
                  {project.stack.map((tech) => (
                    <span>{tech}</span>
                  ))}
                </div>
                <div class="project__links">
                  {project.links.writeUp && (
                    <a href={project.links.writeUp}>Case study</a>
                  )}
                  {project.links.live && (
                    <a href={project.links.live} target="_blank" rel="noreferrer">Visit site</a>
                  )}
                </div>
              </div>
            </div>
          </div>
        </section>
      ))}
    </div>
  </article>
</BaseLayout>

<style>
  .page {
    display: flex;
    flex-direction: column;
    gap: clamp(2.5rem, 5vw, 3.5rem);
  }

  .page__hero {
    padding: clamp(3rem, 8vw, 4.5rem) clamp(1.5rem, 6vw, 3rem) 0;
    display: grid;
    gap: clamp(1.75rem, 4vw, 2.5rem);
  }

  .page__eyebrow {
    margin: 0;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--accent);
  }

  .page__lead {
    margin: 0;
    max-width: 720px;
    color: var(--muted);
  }

  .projects {
    display: grid;
    gap: clamp(2.5rem, 5vw, 3.5rem);
    padding-inline: clamp(1.5rem, 6vw, 3rem);
  }

  .project {
    display: grid;
    gap: clamp(2rem, 4vw, 2.75rem);
  }

  .project__meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--muted);
    flex-wrap: wrap;
  }

  .project__index {
    font-family: 'Outfit', 'Inter', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--accent);
  }

  .project__tagline {
    margin: 0;
    overflow-wrap: anywhere;
    flex: 1 1 220px;
  }

  .project__body {
    display: grid;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 1fr);
    gap: clamp(2.25rem, 4vw, 3rem);
    background: var(--surface);
    border-radius: var(--radius-lg);
    padding: clamp(2rem, 4vw, 3rem);
    box-shadow: var(--shadow);
  }

  .project__media img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
  }

  .project__content {
    display: grid;
    gap: clamp(1.5rem, 3vw, 2rem);
  }

  .project__summary {
    margin: 0;
    color: var(--muted);
  }

  .project__lists {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
    gap: clamp(1.5rem, 3vw, 2rem);
  }

  .project__lists h3 {
    margin: 0 0 0.65rem;
    font-size: 1rem;
  }

  .project__lists ul {
    margin: 0;
    padding-left: 1.5rem;
    display: grid;
    gap: 0.75rem;
    color: var(--muted);
  }

  .project__footer {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: clamp(1.25rem, 3vw, 2rem);
    align-items: center;
  }

  .project__stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.65rem;
  }

  .project__stack span {
    display: inline-flex;
    align-items: center;
    padding: 0.45rem 0.85rem;
    border-radius: 999px;
    background: rgba(88, 80, 236, 0.1);
    color: var(--accent);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .project__links {
    display: flex;
    gap: 1rem;
  }

  .project__links a {
    color: var(--accent);
    font-weight: 600;
    text-decoration: none;
  }

  .project__links a[target='_blank']::after {
    content: '↗';
    margin-left: 0.35rem;
    font-size: 0.85em;
  }

  @media (max-width: 960px) {
    .project__body {
      grid-template-columns: 1fr;
      padding: clamp(1.75rem, 6vw, 2.5rem);
    }
  }

  @media (max-width: 640px) {
    .page__hero {
      padding: clamp(2.5rem, 8vw, 3rem) clamp(1.25rem, 6vw, 2rem) 0;
    }

    .projects {
      padding-inline: clamp(1.25rem, 6vw, 2rem);
    }

    .project__body {
      padding: clamp(1.5rem, 8vw, 2rem);
    }

    .project__footer {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
