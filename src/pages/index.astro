---
import BaseLayout from '../layouts/BaseLayout.astro';
import projects from '../data/projects.json';

const strengths = [
	'Design Systems × Frontend',
	'Product Discovery Facilitation',
	'Accessibility by default',
	'Cross-team design system operations',
	'Data & user insight synthesis',
	'Performance and accessibility co-ownership'
];

const profile = [
	{ label: '所属', value: 'BrightLayer Inc.' },
	{ label: '職種', value: 'Lead Creative Developer' },
	{ label: '所在地', value: 'Tokyo / Remote' }
];

const externalLinks = [
	{ label: 'GitHub', href: 'https://github.com/yukassa' },
	{ label: 'LinkedIn', href: 'https://www.linkedin.com' },
	{ label: 'Zenn', href: 'https://zenn.dev' },
	{ label: 'Email', href: 'mailto:hello@example.com' }
];

const spotlightProjects = projects.slice(0, 3);
---

<BaseLayout title="Home — yukassa" description="ダッシュボード形式でクリエイティブデベロッパー yukassa のプロフィールと強みを紹介します。">
	<section class="dashboard">
		<div class="container dashboard__grid">
			<div class="panel panel--hero">
				<p class="panel__eyebrow">Creative Developer / DesignOps</p>
				<h1>UI と実装の橋渡しで、プロダクトを最速で届ける</h1>
				<p class="panel__lead">
					デザインシステム構築とフロントエンド実装を軸に、チームが継続的に価値を届けられる仕組みを整備します。
				</p>
				<div class="chips" aria-label="Strengths">
					{strengths.map((item) => (
						<span>{item}</span>
					))}
				</div>
			</div>

			<div class="panel panel--projects">
				<h2>Projects Spotlight</h2>
				<ul class="spotlight">
					{spotlightProjects.map((project) => (
						<li>
							<div class="spotlight__meta">
								<span class="spotlight__title">{project.title}</span>
								<span class="spotlight__tagline">{project.tagline}</span>
							</div>
							<a class="spotlight__link" href={`/projects#${project.slug}`}>概要を見る</a>
						</li>
					))}
				</ul>
			</div>

			<div class="panel panel--profile">
				<h2>プロフィール</h2>
				<dl>
					{profile.map((item) => (
						<div>
							<dt>{item.label}</dt>
							<dd>{item.value}</dd>
						</div>
					))}
				</dl>
			</div>

			<div class="panel panel--links">
				<h2>External</h2>
				<ul>
					{externalLinks.map((link) => (
						<li>
							<a href={link.href} target={link.href.startsWith('mailto') ? '_self' : '_blank'} rel={link.href.startsWith('mailto') ? undefined : 'noreferrer'}>
								{link.label}
							</a>
						</li>
					))}
				</ul>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	.dashboard {
		padding: clamp(3rem, 8vw, 5rem) 0 clamp(2rem, 6vw, 4rem);
		min-height: calc(100vh - 12rem);
		display: flex;
		align-items: center;
		position: relative;
		isolation: isolate;
	}

	.dashboard::before,
	.dashboard::after {
		content: '';
		position: absolute;
		inset: clamp(1.5rem, 5vw, 3rem);
		border-radius: clamp(2.8rem, 8vw, 4.5rem);
		pointer-events: none;
		z-index: -1;
	}

	.dashboard::before {
		background: linear-gradient(120deg, rgba(18, 30, 72, 0.65), rgba(8, 11, 32, 0.86));
		box-shadow: 0 40px 80px rgba(3, 6, 26, 0.55);
	}

	.dashboard::after {
		background:
			radial-gradient(circle at 22% 18%, rgba(124, 92, 255, 0.28), transparent 62%),
			radial-gradient(circle at 82% 30%, rgba(56, 189, 248, 0.25), transparent 58%),
			radial-gradient(circle at 60% 85%, rgba(245, 158, 248, 0.2), transparent 60%);
		opacity: 0.9;
		filter: blur(22px);
	}

	.dashboard__grid {
		display: grid;
		gap: clamp(1.85rem, 3vw, 2.6rem);
		grid-template-columns: repeat(12, minmax(0, 1fr));
		grid-auto-rows: minmax(170px, auto);
	}

	.panel {
		background: linear-gradient(145deg, rgba(19, 30, 72, 0.78), rgba(8, 14, 38, 0.92));
		border: 1px solid var(--border);
		border-radius: var(--radius-md);
		padding: clamp(1.85rem, 3vw, 2.6rem);
		display: grid;
		gap: 1rem;
		box-shadow: 0 24px 48px rgba(3, 6, 26, 0.55);
		position: relative;
		overflow: hidden;
		transition: transform 0.3s ease, border-color 0.3s ease;
	}

	.panel::before,
	.panel::after {
		content: '';
		position: absolute;
		inset: 0;
		pointer-events: none;
		transition: opacity 0.35s ease;
	}

	.panel::before {
		background: radial-gradient(circle at 18% 20%, rgba(124, 92, 255, 0.22), transparent 60%), radial-gradient(circle at 85% 75%, rgba(56, 189, 248, 0.18), transparent 62%);
		opacity: 0.65;
	}

	.panel::after {
		opacity: 0;
		background: conic-gradient(from 180deg at 80% 20%, rgba(56, 189, 248, 0.28), transparent 140deg);
	}

	.panel:hover,
	.panel:focus-within {
		transform: translateY(-6px);
		border-color: rgba(124, 146, 220, 0.35);
	}

	.panel:hover::after,
	.panel:focus-within::after {
		opacity: 0.85;
	}

	.panel--hero {
		grid-column: span 8;
		grid-row: span 2;
		padding: clamp(2.15rem, 3.2vw, 2.85rem);
		background:
			linear-gradient(135deg, rgba(124, 92, 255, 0.32), rgba(56, 189, 248, 0.18)),
			linear-gradient(160deg, rgba(18, 32, 86, 0.85), rgba(10, 16, 44, 0.94));
	}

	.panel--profile,
	.panel--links {
		grid-column: span 6;
		align-content: flex-start;
	}

	.panel--projects {
		grid-column: span 4;
		grid-row: span 2;
		display: grid;
		align-content: flex-start;
		gap: 1.6rem;
		background:
			linear-gradient(140deg, rgba(15, 32, 78, 0.88), rgba(9, 20, 56, 0.95));
	}

	.panel--projects::before {
		background: radial-gradient(circle at 18% 25%, rgba(124, 92, 255, 0.3), transparent 60%), radial-gradient(circle at 80% 70%, rgba(56, 189, 248, 0.22), transparent 60%);
		opacity: 0.7;
	}

	.panel__eyebrow {
		margin: 0;
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--accent);
	}

	.panel h1 {
		margin: 0;
		font-family: 'Outfit', 'Inter', sans-serif;
		font-size: clamp(2.6rem, 3.8vw, 3.4rem);
		line-height: 1.1;
	}

	.panel__lead {
		margin: 0;
		max-width: 520px;
		color: var(--muted);
		font-size: 1.05rem;
	}

	.chips {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
	}

	.chips span {
		display: inline-flex;
		align-items: center;
		padding: 0.45rem 0.9rem;
		border-radius: 999px;
		background: var(--accent-soft);
		color: var(--accent);
		font-weight: 600;
		font-size: 0.95rem;
	}

	.spotlight {
		list-style: none;
		margin: 0;
		padding: 0;
		display: grid;
		gap: 1.1rem;
	}

	.spotlight li {
		display: grid;
		gap: 0.6rem;
		padding: 1.1rem 1.2rem;
		border-radius: var(--radius-sm);
		border: 1px solid rgba(124, 146, 220, 0.25);
		background: linear-gradient(120deg, rgba(18, 30, 72, 0.75), rgba(8, 16, 38, 0.9));
		position: relative;
		overflow: hidden;
	}

	.spotlight li::after {
		content: '';
		position: absolute;
		inset: -30% -50% auto auto;
		height: 120px;
		width: 120px;
		background: radial-gradient(circle, rgba(56, 189, 248, 0.25), transparent 70%);
		opacity: 0.35;
	}
	}

	.spotlight__meta {
		display: grid;
		gap: 0.3rem;
	}

	.spotlight__title {
		font-weight: 600;
		color: #f8fafc;
	}

	.spotlight__tagline {
		color: var(--muted);
		font-size: 0.95rem;
	}

	.spotlight__link {
		justify-self: flex-start;
		color: var(--accent);
		font-weight: 600;
		text-decoration: none;
	}

	.spotlight__link::after {
		content: '→';
		margin-left: 0.35rem;
		font-size: 0.85em;
	}

	.spotlight__link:hover,
	.spotlight__link:focus {
		text-decoration: underline;
	}

	.panel__link {
		margin-top: auto;
		align-self: flex-end;
		color: var(--accent);
		font-weight: 600;
		text-decoration: none;
	}

	.panel__link:hover,
	.panel__link:focus {
		text-decoration: underline;
	}

	.panel--profile dl {
		margin: 0;
		display: grid;
		gap: 0.9rem;
	}

	.panel--profile div {
		display: flex;
		justify-content: space-between;
		gap: 1rem;
	}

	.panel--profile dt {
		margin: 0;
		color: var(--muted);
		font-weight: 500;
	}

	.panel--profile dd {
		margin: 0;
		font-weight: 600;
	}

	.panel--links ul {
		margin: 0;
		padding-left: 1.1rem;
		display: grid;
		gap: 0.65rem;
		color: var(--muted);
	}

	.panel--links li {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.panel--links ul {
		list-style: none;
		padding: 0;
	}

	.panel--links a {
		color: #f8fafc;
		text-decoration: none;
		font-weight: 600;
	}

	.panel--links a::after {
		content: '↗';
		margin-left: 0.4rem;
		font-size: 0.85em;
	}

	.panel--links a:hover,
	.panel--links a:focus {
		color: var(--accent-secondary);
	}

	@media (max-width: 1024px) {
		.dashboard {
			min-height: auto;
			padding-top: var(--space-md);
		}

		.dashboard__grid {
			grid-template-columns: repeat(6, minmax(0, 1fr));
		}

		.panel--hero {
			grid-column: span 6;
			grid-row: span 2;
		}

		.panel--profile,
		.panel--links,
		.panel--projects {
			grid-column: span 6;
		}
	}

	@media (max-width: 640px) {
		.panel {
			padding: clamp(1.45rem, 6vw, 1.85rem);
		}

		.panel h1 {
			font-size: clamp(2.1rem, 8vw, 2.6rem);
		}

		.panel--profile div {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
