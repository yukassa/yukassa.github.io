---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import SkillsGrid from '../components/SkillsGrid.astro';
import ContactBanner from '../components/ContactBanner.astro';

import projects from '../data/projects.json';
import skills from '../data/skills.json';

const latestProjects = projects.slice(0, 3);
const heroSkills = ['Product Thinking', 'Frontend Engineering', 'Design Systems'];
---

<BaseLayout title="yukassa" description="Dummy Portfolio site based Astro">
	<Hero
		title="Hi, I'm yukassa"
		subtitle="Developer"
		description="I have experience in projects involving the development and operation of web services and internal systems, as well as data analysis."
		primaryCta={{ label: 'View works', href: '/works' }}
		secondaryCta={{ label: 'Contact me', href: '/contact' }}
		heroSkills={heroSkills}
	/>

	<section class="section">
		<div class="container section__header">
			<div>
				<p class="section__eyebrow">Projects</p>
				<h2>Recent work</h2>
			</div>
			<a class="section__link" href="/works">View all projects</a>
		</div>
		<div class="container projects-grid">
			{latestProjects.map((project) => (
				<ProjectCard project={project} />
			))}
		</div>
	</section>

	<section class="section">
		<div class="container">
			<p class="section__eyebrow">Capabilities</p>
			<h2>Core skills</h2>
			<p class="section__description">
				I have experience in a wide range of phases of product development, including design and development, operational improvement, experiment planning and data analysis.
			</p>
			<SkillsGrid skills={skills} />
		</div>
	</section>

	<ContactBanner
		title="Letâ€™s shape your next product"
		description="This is a dummy site."
		primaryCta={{ label: 'Schedule a call', href: '/contact' }}
	/>
</BaseLayout>

<style>
	.section {
		padding: 4rem 0;
	}

	.section__header {
		display: flex;
		align-items: flex-end;
		justify-content: space-between;
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.section__eyebrow {
		margin: 0 0 0.5rem;
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--accent);
	}

	.section__header h2,
	h2 {
		margin: 0;
		font-family: 'Outfit', 'Inter', sans-serif;
		font-size: clamp(2rem, 3.5vw, 2.5rem);
	}

	.section__link {
		align-self: center;
		color: var(--muted);
		text-decoration: none;
		font-weight: 600;
	}

	.section__link:hover,
	.section__link:focus {
		color: var(--accent);
	}

	.projects-grid {
		display: grid;
		gap: 2rem;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	}

	.section__description {
		margin: 0 0 2rem;
		max-width: 640px;
		color: var(--muted);
	}

	@media (max-width: 720px) {
		.section__header {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
