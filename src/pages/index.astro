---
import BaseLayout from '../layouts/BaseLayout.astro';

const progression = [
	{
		stage: '現在',
		phase: '社内SE / バックエンドエンジニア',
		timeframe: '2022年 - 現在',
		description:
			'製造業向けの基幹システムを内製し、在庫・購買データを扱う API とバッチ処理を構築。業務チームの意思決定に必要な情報がタイムリーに届く状態を整備しています。',
		focus: [
			'在庫／購買データの API と ETL を内製し既存システムと連携',
			'モニタリング整備で障害一次対応の平均時間を短縮'
		]
	},
	{
		stage: '移行準備',
		phase: '分析案件ファシリテーション',
		timeframe: '2023年 - 2024年',
		description:
			'複数部門を横断するデータ分析案件の要件整理から実装、可視化までをリード。課題発見 → データ活用 → 意思決定支援の流れをワークショップで伴走しました。',
		focus: [
			'需要予測 PoC のモデリングとダッシュボード設計',
			'業務担当者との共創ワークショップで意思決定フローを可視化'
		]
	},
	{
		stage: 'これから',
		phase: 'データサイエンティスト',
		timeframe: '2025年以降',
		description:
			'現場の感覚とデータを組み合わせ、意思決定を支えるアルゴリズムと運用プロセスを設計したいと考えています。説明性と継続運用を意識したモデル設計を志向しています。',
		focus: [
			'実データと現場観測を掛け合わせた特徴量設計',
			'説明責任を担保するモデル運用とコミュニケーション'
		]
	}
];

const transitionReasons = [
	{
		title: '分析案件で得た意思決定支援の手応え',
		summary:
			'バックエンドの知見を活かしつつ、データ分析を業務フローに落とし込む伴走を経験。意思決定の質を変える仕事に重心を移したいと考えています。',
		points: [
			'在庫予測 PoC で欠品リスクのシナリオ比較を提示し、調達会議の判断時間を短縮',
			'データ収集体制の整備とサポートで部門横断の信頼関係を構築'
		]
	},
	{
		title: '物理学で培った観察とモデリング志向',
		summary:
			'学生時代は非線形物理・自己組織化を専攻。現象を観察し仮説とモデルで説明する営みを、業務データ分析にも転用しています。',
		points: [
			'ノイズを含むフィールドデータでも仮説検証を小さく早く回す習慣',
			'モデリングと検証ループを設計ドキュメントに落とし込み、チーム内共有を促進'
		]
	},
	{
		title: '現実世界のデータと開発をつなぐ探究心',
		summary:
			'人工生命や創発現象、Generative Art に関心があり、センサーや現場観測データを用いた意思決定支援に可能性を感じています。',
		points: [
			'Generative Art の研究ログを継続し、将来的な可視化資産として拡張予定',
			'センサー／現場データを扱う案件で選択肢を増やす役割を担いたい'
		]
	}
];

const projectStories = [
	{
		theme: 'Demand Planning',
		title: '在庫需要シミュレーション基盤',
		role: '担当: Backend / Analytics Lead',
		problem:
			'季節変動が大きい部品の欠品リスクを予測できず、調達会議で毎回属人的に判断していた。',
		dataSources: ['販売・出荷ログ', '天候／イベントカレンダー', '倉庫在庫センサー'],
		approach:
			'説明性を重視し、勾配ブースティング＋特徴量エンジニアリングでシナリオを比較。ワークショップで意思決定パターンを整理。',
		impact:
			'リードタイム前倒しアラートを導入し、在庫調整会議の準備時間を 30% 削減（社内試算）。'
	},
	{
		theme: 'Ops Intelligence',
		title: '保守アラート優先度ダッシュボード',
		role: '担当: Backend Engineer / Analyst',
		problem:
			'設備障害アラートが大量に届き、現場チームが優先順位付けに苦戦。復旧時間が読みづらかった。',
		dataSources: ['ログ監視プラットフォーム', '振動センサー', '現場ヒアリングメモ'],
		approach:
			'特徴量重要度で説明可能なランダムフォレストを採用し、根拠を添えた優先度を提示。SLO と連携して運用フローを再設計。',
		impact:
			'一次対応の平均復旧時間を 15% 短縮し、現場への共有レポート作成時間を週 4 時間削減。'
	},
	{
		theme: 'Field Research',
		title: 'フィールド調査 × サーベイ統合',
		role: '担当: Data Facilitator',
		problem:
			'現場観察とアンケート結果が分断され、改善施策の優先度が定まらなかった。',
		dataSources: ['IoT センサー', '顧客アンケート', 'フィールドノート'],
		approach:
			'埋め込み空間で観察記録とアンケートを統合し、自己組織化マップでパターンを可視化。',
		impact:
			'サービス改善アイデアの優先度が明確になり、次期ロードマップの合意形成が 2 週間前倒し。'
	}
];

const journeyMilestones = [
	{
		period: '2015 - 2019',
		title: '物理学専攻（非線形・自己組織化）',
		description: 'パターン形成やボイドモデルの研究に触れ、観察 → 仮説 → モデル化 → 検証の循環を学ぶ。',
		connection: '創発現象への興味が Generative Art やデータ可視化の探究につながる'
	},
	{
		period: '2019 - 2021',
		title: '業務システム開発チーム参画',
		description: '受発注管理システムの刷新を担当。バックエンド実装とデータベース設計を内製。',
		connection: 'データ品質と業務フローの両立方法を学ぶ'
	},
	{
		period: '2022 - 2024',
		title: '社内SEとしてデータ統合基盤を構築',
		description: 'データ収集～活用のパイプラインを整備し、分析案件の伴走を開始。',
		connection: 'データサイエンス職への関心が明確化'
	},
	{
		period: '2024 - ',
		title: 'Generative Art / DS 学習ログを継続',
		description: '人工生命・自己組織化モデルのシミュレーションを制作し、視覚表現と意思決定支援の接点を探る。',
		connection: '今後の Research Lab セクションとして展開予定'
	}
];
---

<BaseLayout
	title="Insight Narrative — yukassa"
	description="社内SEとして培ったバックエンド基盤と分析案件の経験をもとに、データサイエンティストへの転身を描くポートフォリオ。"
>
	<article class="insight-page">
		<section class="insight-hero container">
			<div class="insight-hero__intro">
				<p class="insight-hero__eyebrow">Insight Narrative</p>
				<h1>バックエンドからデータサイエンスへ。意思決定を支える開発を届けたい。</h1>
				<p class="insight-hero__lead">
					社内SEとしてバックエンドとデータ基盤を内製し、分析案件の仮説設計や可視化まで伴走してきました。次のキャリアでは、現場の感覚とデータの両方を扱い、意思決定の質を高めるデータサイエンティストを目指します。
				</p>
				<div class="insight-hero__cta">
					<a class="primary" href="/projects">プロジェクトを見る</a>
					<a class="secondary" href="/resume">履歴を確認</a>
				</div>
			</div>
			<div class="insight-hero__timeline" aria-label="キャリアの進行イメージ">
				<ol class="progression">
					{progression.map((item, index) => (
						<li class="progression__card">
							<span class="progression__dot" aria-hidden="true"></span>
							<span class="progression__stage">{item.stage}</span>
							<div class="progression__meta">
								<p class="progression__phase">{item.phase}</p>
								<p class="progression__time">{item.timeframe}</p>
							</div>
							<p class="progression__description">{item.description}</p>
							<ul class="progression__focus">
								{item.focus.map((focus) => (
									<li>{focus}</li>
								))}
							</ul>
							<span class="progression__index" aria-hidden="true">{String(index + 1).padStart(2, '0')}</span>
						</li>
					))}
				</ol>
			</div>
		</section>

		<section class="transition container">
			<header class="transition__header">
				<h2>Why now? — データサイエンスへ舵を切る理由</h2>
				<p>
					バックエンド開発で培った業務理解と、物理学から根付いたモデリング志向。両者を掛け合わせ、現実世界の判断を支えるデータプロダクトを作ることが次の目標です。
				</p>
			</header>
			<div class="transition__grid">
				{transitionReasons.map((reason) => (
					<article class="reason-card">
						<h3>{reason.title}</h3>
						<p>{reason.summary}</p>
						<ul>
							{reason.points.map((point) => (
								<li>{point}</li>
							))}
						</ul>
					</article>
				))}
			</div>
		</section>

		<section class="storytelling container">
			<header class="storytelling__header">
				<p class="storytelling__eyebrow">Project Stories</p>
				<h2>課題・データ・意思決定のストーリーを可視化</h2>
				<p>
					実務で扱った分析案件を、課題設定・データソース・意思決定インパクトの 3 つの軸で整理しました。各案件では再現性と運用可能性を重視しています。
				</p>
			</header>
			<div class="story-grid">
				{projectStories.map((story) => (
					<article class="story-card">
						<header>
							<span class="story-card__theme">{story.theme}</span>
							<h3>{story.title}</h3>
							<p class="story-card__role">{story.role}</p>
						</header>
						<dl class="story-card__details">
							<div>
								<dt>課題</dt>
								<dd>{story.problem}</dd>
							</div>
							<div>
								<dt>アプローチ</dt>
								<dd>{story.approach}</dd>
							</div>
						</dl>
						<div class="story-card__sources">
							<p class="story-card__label">Data Sources</p>
							<ul>
								{story.dataSources.map((source) => (
									<li>{source}</li>
								))}
							</ul>
						</div>
						<footer>
							<p class="story-card__impact">Decision Impact — {story.impact}</p>
						</footer>
					</article>
				))}
			</div>
		</section>

		<section class="journey container">
			<header class="journey__header">
				<p class="journey__eyebrow">Analytics Journey</p>
				<h2>物理学から現場密着のデータ活用へ</h2>
				<p>
					学術で身につけた観察とモデリングの習慣を、業務データと現場の知見に結びつけてきた過程です。今後は Generative Art や人工生命の探究を Research Lab として展開予定です。
				</p>
			</header>
			<ol class="journey__timeline">
				{journeyMilestones.map((entry) => (
					<li class="journey__item">
						<span class="journey__dot" aria-hidden="true"></span>
						<div class="journey__meta">
							<p class="journey__period">{entry.period}</p>
							<h3>{entry.title}</h3>
						</div>
						<p class="journey__description">{entry.description}</p>
						<p class="journey__connection">{entry.connection}</p>
					</li>
				))}
			</ol>
		</section>

		<section class="insight-cta container">
			<div class="insight-cta__inner">
				<h2>意思決定を支えるデータ活用について、ぜひご相談ください。</h2>
				<p>
					バックエンド基盤・分析案件・Generative Art / Artificial Life の探究をつなげ、現場の判断を支援するプロダクトを共に形にしていきたいと考えています。
				</p>
				<div class="insight-cta__actions">
					<a class="insight-cta__primary" href="mailto:hello@example.com">メールで連絡する</a>
					<a class="insight-cta__secondary" href="/tech-notes">学習ログを見る</a>
				</div>
			</div>
		</section>
	</article>
</BaseLayout>

<style>
	.insight-page {
		display: flex;
		flex-direction: column;
		gap: clamp(3rem, 6vw, 4.75rem);
	}

	.insight-hero {
		position: relative;
		display: grid;
		gap: clamp(2.5rem, 5vw, 3.5rem);
		grid-template-columns: minmax(0, 1.05fr) minmax(0, 0.95fr);
		align-items: stretch;
		padding: clamp(2.75rem, 6vw, 3.75rem);
		border-radius: var(--radius-lg);
		background: linear-gradient(135deg, rgba(27, 183, 201, 0.22), rgba(3, 17, 29, 0.55));
		box-shadow: var(--shadow);
		overflow: hidden;
	}

	.insight-hero::before {
		content: '';
		position: absolute;
		inset: 0;
		background: radial-gradient(circle at 20% 20%, rgba(27, 183, 201, 0.18), transparent 55%),
			radial-gradient(circle at 80% 15%, rgba(251, 191, 36, 0.12), transparent 60%);
		pointer-events: none;
		mix-blend-mode: screen;
	}

	.insight-hero__intro {
		position: relative;
		z-index: 1;
		display: grid;
		gap: clamp(1.25rem, 3vw, 1.85rem);
	}

	.insight-hero__eyebrow {
		margin: 0;
		font-size: 0.85rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		font-weight: 600;
		color: var(--highlight);
	}

	.insight-hero__lead {
		margin: 0;
		color: var(--muted);
		max-width: 640px;
		font-size: 1.05rem;
	}

	.insight-hero__cta {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.insight-hero__cta a {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.85rem 1.8rem;
		border-radius: 999px;
		font-weight: 600;
		text-decoration: none;
		transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
	}

	.insight-hero__cta a.primary {
		background: var(--accent);
		color: #02121d;
		box-shadow: 0 12px 28px rgba(27, 183, 201, 0.35);
	}

	.insight-hero__cta a.primary:hover,
	.insight-hero__cta a.primary:focus {
		transform: translateY(-2px);
	}

	.insight-hero__cta a.secondary {
		border: 1px solid var(--border);
		color: var(--text);
		background: rgba(3, 17, 29, 0.35);
	}

	.insight-hero__cta a.secondary:hover,
	.insight-hero__cta a.secondary:focus {
		border-color: var(--accent);
		color: var(--accent);
	}

	.insight-hero__timeline {
		position: relative;
		z-index: 1;
		padding-left: clamp(1.5rem, 4vw, 2.25rem);
	}

	.insight-hero__timeline::before {
		content: '';
		position: absolute;
		left: 0.4rem;
		top: clamp(0.5rem, 2vw, 1rem);
		bottom: clamp(0.5rem, 2vw, 1rem);
		width: 2px;
		background: linear-gradient(180deg, rgba(27, 183, 201, 0.1), rgba(27, 183, 201, 0.5));
	}

	.progression {
		list-style: none;
		margin: 0;
		padding: 0;
		display: grid;
		gap: clamp(1.5rem, 4vw, 2.5rem);
	}

		.progression__card {
		position: relative;
		background: var(--surface-raised);
		border: 1px solid rgba(27, 183, 201, 0.15);
		border-radius: var(--radius-md);
		padding: clamp(1.8rem, 4vw, 2.3rem);
		box-shadow: var(--shadow);
		overflow: hidden;
			transition: transform 0.2s ease, border-color 0.2s ease;
			transform: translateX(var(--offset, 0));
	}

	.progression__card:hover,
	.progression__card:focus-within {
			transform: translateX(var(--offset, 0)) translateY(-6px);
		border-color: rgba(27, 183, 201, 0.35);
	}

		.progression__card:nth-child(2) {
			--offset: 1.5%;
		}

		.progression__card:nth-child(3) {
			--offset: 3%;
		}

	.progression__dot {
		position: absolute;
		left: -0.9rem;
		top: 1.6rem;
		width: 14px;
		height: 14px;
		border-radius: 999px;
		background: var(--highlight);
		box-shadow: 0 0 0 6px rgba(251, 191, 36, 0.18);
	}

	.progression__stage {
		display: inline-flex;
		align-items: center;
		gap: 0.4rem;
		padding: 0.35rem 0.75rem;
		border-radius: 999px;
		background: rgba(27, 183, 201, 0.18);
		color: #cffafe;
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.06em;
	}

	.progression__meta {
		margin-top: 1rem;
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		align-items: baseline;
	}

	.progression__phase {
		margin: 0;
		font-size: 1.1rem;
		font-weight: 600;
	}

	.progression__time {
		margin: 0;
		color: var(--muted);
		font-size: 0.9rem;
	}

	.progression__description {
		margin: 1rem 0;
		color: var(--muted);
	}

	.progression__focus {
		margin: 0;
		padding-left: 1.25rem;
		display: grid;
		gap: 0.5rem;
		color: #d6e6f7;
	}

	.progression__index {
		position: absolute;
		right: clamp(1.2rem, 3vw, 1.8rem);
		bottom: clamp(1rem, 3vw, 1.5rem);
		font-size: 2.5rem;
		font-weight: 700;
		color: rgba(227, 237, 247, 0.08);
	}

	.transition {
		display: grid;
		gap: clamp(2rem, 5vw, 3rem);
	}

		.transition__header {
			display: grid;
			gap: 1rem;
			max-width: 760px;
			margin-left: clamp(0.5rem, 5vw, 2.5rem);
		}

	.transition__header p {
		margin: 0;
		color: var(--muted);
	}

	.transition__grid {
		display: grid;
		gap: clamp(1.5rem, 4vw, 2.5rem);
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
	}

	.reason-card {
		background: var(--surface);
		border-radius: var(--radius-md);
		border: 1px solid var(--border);
		padding: clamp(1.6rem, 4vw, 2.2rem);
		display: grid;
		gap: 0.85rem;
		box-shadow: var(--shadow);
	}

	.reason-card h3 {
		margin: 0;
		font-size: 1.1rem;
	}

	.reason-card p {
		margin: 0;
		color: var(--muted);
	}

	.reason-card ul {
		margin: 0;
		padding-left: 1.2rem;
		display: grid;
		gap: 0.5rem;
		color: #d9e7f4;
	}

	.storytelling {
		display: grid;
		gap: clamp(2rem, 5vw, 3.5rem);
	}

		.storytelling__header {
			display: grid;
			gap: 1rem;
			max-width: 760px;
			margin-left: clamp(0.5rem, 5vw, 2.5rem);
		}

	.storytelling__eyebrow {
		margin: 0;
		font-weight: 600;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		font-size: 0.8rem;
		color: var(--highlight);
	}

	.storytelling__header p {
		margin: 0;
		color: var(--muted);
	}

	.story-grid {
		display: grid;
		gap: clamp(1.75rem, 4vw, 2.5rem);
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	}

	.story-card {
		background: linear-gradient(180deg, rgba(7, 34, 53, 0.85), rgba(3, 17, 29, 0.95));
		border: 1px solid rgba(27, 183, 201, 0.16);
		border-radius: var(--radius-md);
		padding: clamp(1.6rem, 4vw, 2.25rem);
		display: grid;
		gap: 1rem;
		position: relative;
		overflow: hidden;
	}

	.story-card::after {
		content: '';
