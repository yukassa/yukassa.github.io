---
import BaseLayout from '../layouts/BaseLayout.astro';

const strengths = ['Design Systems × Frontend', 'Product Discovery Facilitation', 'Accessibility by default'];

const profile = [
	{ label: '所属', value: 'BrightLayer Inc.' },
	{ label: '職種', value: 'Lead Creative Developer' },
	{ label: '所在地', value: 'Tokyo / Remote' }
];

const focusAreas = [
	'プロダクトチーム横断のデザインシステム運用',
	'データとユーザーヒアリングを掛け合わせた意思決定支援',
	'開発チームと連携したパフォーマンス/アクセシビリティ改善'
];

const externalLinks = [
	{ label: 'GitHub', href: 'https://github.com/yukassa' },
	{ label: 'LinkedIn', href: 'https://www.linkedin.com' },
	{ label: 'Zenn', href: 'https://zenn.dev' },
	{ label: 'Email', href: 'mailto:hello@example.com' }
];

const metrics = [
	{ value: '14 days', label: '平均リリースサイクル' },
	{ value: '250+', label: '運用中のデザイントークン' },
	{ value: '+18pt', label: 'NPS 改善幅 (直近プロジェクト)' }
];
---

<BaseLayout title="Home — yukassa" description="ダッシュボード形式でクリエイティブデベロッパー yukassa のプロフィールと強みを紹介します。">
	<section class="dashboard">
		<div class="container dashboard__grid">
			<div class="panel panel--hero">
				<p class="panel__eyebrow">Creative Developer / DesignOps</p>
				<h1>UI と実装の橋渡しで、プロダクトを最速で届ける</h1>
				<p class="panel__lead">
					デザインシステム構築とフロントエンド実装を軸に、チームが継続的に価値を届けられる仕組みを整備します。
				</p>
				<div class="chips" aria-label="Strengths">
					{strengths.map((item) => (
						<span>{item}</span>
					))}
				</div>
			</div>

			<div class="panel panel--metrics">
				<h2>Delivery Signals</h2>
				<ul class="metrics">
					{metrics.map((metric) => (
						<li>
							<strong>{metric.value}</strong>
							<span>{metric.label}</span>
						</li>
					))}
				</ul>
				<a class="panel__link" href="/projects">Projects ダッシュボードへ ↗</a>
			</div>

			<div class="panel panel--profile">
				<h2>プロフィール</h2>
				<dl>
					{profile.map((item) => (
						<div>
							<dt>{item.label}</dt>
							<dd>{item.value}</dd>
						</div>
					))}
				</dl>
			</div>

			<div class="panel panel--focus">
				<h2>フォーカス領域</h2>
				<ul>
					{focusAreas.map((area) => (
						<li>{area}</li>
					))}
				</ul>
			</div>

			<div class="panel panel--links">
				<h2>External</h2>
				<ul>
					{externalLinks.map((link) => (
						<li>
							<a href={link.href} target={link.href.startsWith('mailto') ? '_self' : '_blank'} rel={link.href.startsWith('mailto') ? undefined : 'noreferrer'}>
								{link.label}
							</a>
						</li>
					))}
				</ul>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	.dashboard {
		padding: var(--space-md) 0 var(--space-sm);
		min-height: calc(100vh - 12rem);
		display: flex;
		align-items: center;
	}

	.dashboard__grid {
		display: grid;
		gap: 1.5rem;
		grid-template-columns: repeat(12, minmax(0, 1fr));
		grid-auto-rows: minmax(160px, auto);
	}

	.panel {
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: var(--radius-md);
		padding: 1.75rem;
		display: grid;
		gap: 1rem;
		box-shadow: var(--shadow);
		position: relative;
		overflow: hidden;
	}

	.panel::after {
		content: '';
		position: absolute;
		top: -40%;
		right: -30%;
		width: 60%;
		height: 120%;
		background: radial-gradient(circle, rgba(56, 189, 248, 0.18), transparent 70%);
		opacity: 0;
		transition: opacity 0.3s ease;
		pointer-events: none;
	}

	.panel:hover::after,
	.panel:focus-within::after {
		opacity: 1;
	}

	.panel--hero {
		grid-column: span 8;
		grid-row: span 2;
		padding: 2.25rem;
		background: linear-gradient(135deg, rgba(15, 118, 255, 0.22), rgba(56, 189, 248, 0.05)) var(--surface);
	}

	.panel--metrics {
		grid-column: span 4;
		grid-row: span 2;
		align-content: flex-start;
	}

	.panel--profile,
	.panel--focus,
	.panel--links {
		grid-column: span 4;
		align-content: flex-start;
	}

	.panel__eyebrow {
		margin: 0;
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--accent);
	}

	.panel h1 {
		margin: 0;
		font-family: 'Outfit', 'Inter', sans-serif;
		font-size: clamp(2.6rem, 3.8vw, 3.4rem);
		line-height: 1.1;
	}

	.panel__lead {
		margin: 0;
		max-width: 520px;
		color: var(--muted);
		font-size: 1.05rem;
	}

	.chips {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
	}

	.chips span {
		display: inline-flex;
		align-items: center;
		padding: 0.45rem 0.9rem;
		border-radius: 999px;
		background: var(--accent-soft);
		color: var(--accent);
		font-weight: 600;
		font-size: 0.95rem;
	}

	.metrics {
		list-style: none;
		margin: 0;
		padding: 0;
		display: grid;
		gap: 1.25rem;
	}

	.metrics li {
		display: grid;
		gap: 0.35rem;
	}

	.metrics strong {
		font-size: 1.9rem;
		font-weight: 700;
		color: #f8fafc;
	}

	.metrics span {
		color: var(--muted);
		font-size: 0.95rem;
	}

	.panel__link {
		margin-top: auto;
		align-self: flex-end;
		color: var(--accent);
		font-weight: 600;
		text-decoration: none;
	}

	.panel__link:hover,
	.panel__link:focus {
		text-decoration: underline;
	}

	.panel--profile dl {
		margin: 0;
		display: grid;
		gap: 0.9rem;
	}

	.panel--profile div {
		display: flex;
		justify-content: space-between;
		gap: 1rem;
	}

	.panel--profile dt {
		margin: 0;
		color: var(--muted);
		font-weight: 500;
	}

	.panel--profile dd {
		margin: 0;
		font-weight: 600;
	}

	.panel--focus ul,
	.panel--links ul {
		margin: 0;
		padding-left: 1.1rem;
		display: grid;
		gap: 0.65rem;
		color: var(--muted);
	}

	.panel--links ul {
		list-style: none;
		padding: 0;
	}

	.panel--links li {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.panel--links a {
		color: #f8fafc;
		text-decoration: none;
		font-weight: 600;
	}

	.panel--links a::after {
		content: '↗';
		margin-left: 0.4rem;
		font-size: 0.85em;
	}

	.panel--links a:hover,
	.panel--links a:focus {
		color: var(--accent);
	}

	@media (max-width: 1024px) {
		.dashboard {
			min-height: auto;
			padding-top: var(--space-md);
		}

		.dashboard__grid {
			grid-template-columns: repeat(6, minmax(0, 1fr));
		}

		.panel--hero {
			grid-column: span 6;
			grid-row: span 2;
		}

		.panel--metrics {
			grid-column: span 6;
			grid-row: span 1;
		}

		.panel--profile,
		.panel--focus,
		.panel--links {
			grid-column: span 6;
		}
	}

	@media (max-width: 640px) {
		.panel {
			padding: 1.5rem;
		}

		.panel h1 {
			font-size: clamp(2.1rem, 8vw, 2.6rem);
		}

		.panel--profile div {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
