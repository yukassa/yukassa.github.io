---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import SkillsGrid from '../components/SkillsGrid.astro';
import ContactBanner from '../components/ContactBanner.astro';

import projects from '../data/projects.json';
import skills from '../data/skills.json';

const latestProjects = projects.slice(0, 3);
const heroSkills = ['Design Systems', 'Frontend Engineering', 'Product Discovery'];
---

<BaseLayout title="Home — yukassa" description="クリエイティブデベロッパー yukassa のポートフォリオ。代表的なプロジェクトと得意領域を紹介します。">
	<Hero
		title="Hi, I'm yukassa"
		subtitle="Creative Developer"
		description="デザインシステムとフロントエンド実装を軸に、0→1 の検証から継続改善まで伴走します。ユーザーが価値を受け取れる仕組みづくりが得意です。"
		primaryCta={{ label: 'Projectsを見る', href: '/projects' }}
		secondaryCta={{ label: 'About Me', href: '/about' }}
		heroSkills={heroSkills}
	/>

	<section class="section">
		<div class="container section__header">
			<div>
				<p class="section__eyebrow">Featured</p>
				<h2>注目プロジェクト</h2>
			</div>
			<a class="section__link" href="/projects">すべてのプロジェクトへ</a>
		</div>
		<div class="container projects-grid">
			{latestProjects.map((project) => (
				<ProjectCard project={project} />
			))}
		</div>
	</section>

	<section class="section">
		<div class="container">
			<p class="section__eyebrow">Capabilities</p>
			<h2>スキルと提供価値</h2>
			<p class="section__description">
				調査・設計・実装を往復しながら、プロダクトチームの意思決定を支える仕組みづくりを行っています。デザインシステムや自動化で持続的な改善を支援するのがモットーです。
			</p>
			<SkillsGrid skills={skills} />
		</div>
	</section>

	<ContactBanner
		title="気になるプロジェクトがあればお声がけください"
		description="ディスカバリーの壁打ちから、デザインシステム／実装の伴走まで対応可能です。"
		primaryCta={{ label: 'Resume / Skills を見る', href: '/resume' }}
	/>
</BaseLayout>

<style>
	.section {
		padding: 4rem 0;
	}

	.section__header {
		display: flex;
		align-items: flex-end;
		justify-content: space-between;
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.section__eyebrow {
		margin: 0 0 0.5rem;
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--accent);
	}

	.section__header h2,
	h2 {
		margin: 0;
		font-family: 'Outfit', 'Inter', sans-serif;
		font-size: clamp(2rem, 3.5vw, 2.5rem);
	}

	.section__link {
		align-self: center;
		color: var(--muted);
		text-decoration: none;
		font-weight: 600;
	}

	.section__link:hover,
	.section__link:focus {
		color: var(--accent);
	}

	.projects-grid {
		display: grid;
		gap: 2rem;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	}

	.section__description {
		margin: 0 0 2rem;
		max-width: 640px;
		color: var(--muted);
	}

	@media (max-width: 720px) {
		.section__header {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
